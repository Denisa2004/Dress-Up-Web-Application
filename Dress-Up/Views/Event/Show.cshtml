@model Event

<h2>@Model.Name</h2>
<p>@Model.Description</p>
<p><strong>Status:</strong> @(Model.IsActive ? "Activ" : "Inactiv")</p>

<h4>Participanți:</h4>
@if (Model.UserEvents.Any())
{
    <div class="row">
        @foreach (var ue in Model.UserEvents)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@ue.Outfit.ImageUrl" class="card-img-top" alt="Outfit imagine">
                    <div class="card-body">
                        <h5 class="card-title">@ue.User.Username</h5>
                        <p class="card-text">@ue.Outfit.Title</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Fi primul care se inscrie la acest eveniment.</p>
    <a href="@Url.Action("Participate", "Event", new { id = User.Id })" class="details-button">Participa</a>

}
