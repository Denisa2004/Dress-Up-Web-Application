@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager //aici pasul 7 din Useri si Rolur, adica SignInManager<IdentityUser> a devenit SignInManager<User>
        @inject UserManager<User> UserManager //aici pasul 7 din Useri si Rolur, adica UserManager<IdentityUser>a devenit UserManager<User>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="User" asp-action="Index" asp-route-id="@UserManager.GetUserId(User)">Profilul Meu</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
